<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <!--
        <androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/corner_radius"> -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <!--<androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/corner_radius"> -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/profile_picture"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:foreground="@drawable/rounded_corners"
                    android:scaleType="centerCrop"
                    android:src="@drawable/thankyou3" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/gradient" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_thanker_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:paddingLeft="4dp"
                        android:paddingTop="4dp"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        tools:text="THANKER LEVEL" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/text_thanks_given"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="start|bottom"
                            android:layout_weight="1"
                            android:gravity="start|bottom"
                            android:paddingLeft="4dp"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            tools:text="GIVEN X NUMBER" />

                        <TextView
                            android:id="@+id/text_username"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal|bottom"
                            android:layout_weight="2"
                            android:gravity="center_horizontal|bottom"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:text="Guilherme RomÃ£o" />

                        <TextView
                            android:id="@+id/text_thanks_received"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="end|bottom"
                            android:layout_weight="1"
                            android:gravity="end|bottom"
                            android:paddingRight="4dp"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            tools:text="GIVEN X NUMBER" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <!-- </androidx.cardview.widget.CardView> -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_categories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="Category 1 | category 2" />

                <FrameLayout
                    android:id="@+id/image_info"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentEnd="true">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="top"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/info" />

                </FrameLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linear_thanks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linear_thanks_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_first_category"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/tech" />

                        <TextView
                            android:id="@+id/text_first_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="4dp"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            tools:text="Number" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_category_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textSize="11sp"
                        tools:text="Category" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linear_thanks_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_second_category"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/sports" />

                        <TextView
                            android:id="@+id/text_second_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="4dp"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            tools:text="Number" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_category_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textSize="11sp"
                        tools:text="Category" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linear_thanks_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_third_category"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/associations" />

                        <TextView
                            android:id="@+id/text_third_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="4dp"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            tools:text="Number" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_category_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textSize="11sp"
                        tools:text="Category" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_friend_type"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:scaleType="centerCrop"
                    android:src="@drawable/star"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/text_friend_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAllCaps="true"
                    android:textSize="12sp"
                    tools:text="Friend type" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_recent_thanks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/text_thanks_given_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:visibility="gone"
                    tools:text="This is thanks given 1" />

                <TextView
                    android:id="@+id/text_thanks_given_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:textAlignment="center"
                    android:visibility="gone"
                    tools:text="This is thanks given 2" />

                <TextView
                    android:id="@+id/text_thanks_received_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:textAlignment="center"
                    android:visibility="gone"
                    tools:text="This is thanks received 1" />

                <TextView
                    android:id="@+id/text_thanks_received_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:textAlignment="center"
                    android:visibility="gone"
                    tools:text="This is thanks received 2" />

            </LinearLayout>

        </LinearLayout>

        <!--
        </androidx.cardview.widget.CardView> -->
    </androidx.cardview.widget.CardView>
</FrameLayout>