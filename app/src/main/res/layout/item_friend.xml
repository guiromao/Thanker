<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="8dp"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:elevation="0dp"
        app:cardPreventCornerOverlap="false"
        android:id="@+id/cardview_friend"
        app:cardCornerRadius="25dp"
        android:layout_centerHorizontal="true"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/friend_pic"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:src="@drawable/thankyou3"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop">
        </ImageView>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_friend_username"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:text="Username"
            android:textSize="14sp"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:layout_gravity="bottom"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_primary_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                tools:text="Person"
                android:textSize="12sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/text_secondary_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                tools:text=", Brand"
                android:textSize="12sp"
                android:textStyle="italic" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/text_level"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:text="Level"
        android:textSize="12sp"
        android:fontFamily="Roboto"
        android:padding="4dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_marginLeft="4dp">

        <TextView
            android:id="@+id/text_thanks_given"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:text="To whom you have Y Thanks"
            android:textSize="10sp"
            android:layout_marginBottom="2dp"
            android:gravity="center_vertical|bottom"
            />

        <TextView
            android:id="@+id/text_thanks_received"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:text="Gave you X Thanks"
            android:textSize="10sp"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical|top" />

    </LinearLayout>

</LinearLayout>