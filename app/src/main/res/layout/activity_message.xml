<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbarStyle="outsideOverlay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        android:paddingBottom="128dp">

        <TextView
            android:id="@+id/text_message_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="2dp"
            android:textStyle="bold"
            tools:text="Date" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            app:cardCornerRadius="40dp">

            <ImageView
                android:id="@+id/friend_pic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="left"
                android:gravity="center_vertical"
                android:scaleType="centerCrop"
                android:src="@drawable/thankyou3"
                android:thicknessRatio="1.9"></ImageView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="2dp"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="This is the title!" />

        <TextView
            android:id="@+id/text_message_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="2dp"
            android:textSize="14sp"
            tools:text="And here we have the text!" />

        <LinearLayout
            android:id="@+id/linear_cta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/text_cta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="10sp"
                tools:text="This text"
                android:textColor="@color/black"
                android:layout_gravity="center" />

            <Button
                android:id="@+id/button_cta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_rounded_green"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:textSize="13sp"
                android:textColor="@color/white"
                tools:text="Click" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>