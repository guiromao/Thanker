<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.StatsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bottomshapebottom">

    <TextView
        android:id="@+id/text_stats_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:textSize="12sp"
        android:visibility="gone"
        tools:text="Text about stats being presented" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/image_flag"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/spinner_stats_country"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginRight="4dp"
            android:textSize="4sp" />

        <Spinner
            android:id="@+id/spinner_stats_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginLeft="4dp"
            android:textSize="4sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_type_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:textAlignment="center"
        android:visibility="gone"/>

    <Button
        android:id="@+id/check_stats_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_rounded_green"
        android:text="@string/check_stats"
        android:textColor="@color/white"
        android:textSize="10sp" />

    </LinearLayout>

    <ListView
        android:id="@+id/listview_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp" />

    <LinearLayout
        android:id="@+id/empty_view_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/text_empty_view_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textAlignment="center"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:src="@drawable/t" />

    </LinearLayout>

</LinearLayout>