<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarStyle="outsideOverlay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".InviteActivity">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/personinvite"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"/>

        <TextView
            android:id="@+id/text_title_invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Thank this.user@mail.com so we can send the invite!"
            android:textSize="14sp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/text_subtitle_invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="And earn 50 Thankers upon registration!"
            android:textStyle="italic|bold"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/linear_thanks_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center"
                android:orientation="horizontal">

                <!--
                <Button
                    android:id="@+id/button_thanks"
                    android:layout_width="63dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:backgroundTint="@color/disabled_button"
                    android:clickable="false"
                    android:text="Thanks!"
                    android:textColor="@color/white"
                    android:textSize="8sp" /> -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardview_button_thanks"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:foregroundGravity="center"
                        android:elevation="0dp"
                        android:innerRadius="0dp"
                        android:background="@drawable/circlenone"
                        android:shape="ring"
                        android:thicknessRatio="1.9"
                        app:cardCornerRadius="40dp"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        app:cardPreventCornerOverlap="false">

                        <ImageView
                            android:id="@+id/button_thanks"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:clickable="false"
                            android:src="@drawable/thanks" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!--
                <Button
                    android:id="@+id/button_super_thanks"
                    android:layout_width="63dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="@color/disabled_button"
                    android:clickable="false"
                    android:text="Super Thanks!"
                    android:textColor="@color/white"
                    android:textSize="8sp" /> -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardview_button_super_thanks"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerHorizontal="true"
                        android:elevation="0dp"
                        android:innerRadius="0dp"
                        android:background="@drawable/circlenone"
                        android:shape="ring"
                        android:thicknessRatio="1.9"
                        app:cardCornerRadius="40dp"
                        android:layout_margin="8dp"
                        android:layout_gravity="center"
                        app:cardPreventCornerOverlap="false">

                        <ImageView
                            android:id="@+id/button_super_thanks"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:clickable="false"
                            android:src="@drawable/superthanks" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!--
                <Button
                    android:id="@+id/button_mega_thanks"
                    android:layout_width="63dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="@color/disabled_button"
                    android:clickable="false"
                    android:text="Mega Thanks!"
                    android:textColor="@color/white"
                    android:textSize="8sp" /> -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardview_button_mega_thanks"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/circlenone"
                        android:elevation="0dp"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9"
                        app:cardCornerRadius="40dp"
                        android:layout_margin="8dp"
                        android:layout_gravity="center"
                        app:cardPreventCornerOverlap="false">

                        <ImageView
                            android:id="@+id/button_mega_thanks"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:clickable="false"
                            android:src="@drawable/megathanks" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!--
                <Button
                    android:id="@+id/button_power_thanks"
                    android:layout_width="63dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="@color/disabled_button"
                    android:clickable="false"
                    android:text="Power Thanks! âš¡"
                    android:textColor="@color/white"
                    android:textSize="8sp" /> -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardview_button_power_thanks"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/circlenone"
                        android:elevation="0dp"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9"
                        app:cardCornerRadius="40dp"
                        android:layout_margin="8dp"
                        android:layout_gravity="center"
                        app:cardPreventCornerOverlap="false">

                        <ImageView
                            android:id="@+id/button_power_thanks"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:clickable="false"
                            android:src="@drawable/powerthanks" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/text_thanks_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanks x1"
                android:textSize="10sp"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/input_thanks_description"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="11"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:hint="@string/add_message"
                    android:textSize="13sp" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/button_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_rounded_green"
            android:text="@string/thank_and_invite"
            android:textColor="@color/white"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/text_additional_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textAlignment="center"
            tools:text="This is for additional info" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp" />

        <TextView
            android:id="@+id/text_send_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Sending email"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:textStyle="italic"
            android:visibility="gone"/>

    </LinearLayout>

</ScrollView>
